#env
LESS = --IGNORE-CASE --SEARCH-SKIP-SCREEN --jump-target=5 --LONG-PROMPT --hilite-unread --no-init --RAW-CONTROL-CHARS --mouse --wheel-lines=4

VISUAL = vim

#command
l	repaint
^L	flush-repaint
^D	quit

