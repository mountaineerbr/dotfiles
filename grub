# GRUB boot loader configuration
GRUB_DEFAULT=saved
GRUB_TIMEOUT=1
GRUB_DISTRIBUTOR="Arch"
GRUB_CMDLINE_LINUX_DEFAULT="loglevel=3 sysrq_always_enabled=true module_blacklist=pcspkr,snd_pcsp i915.enable_guc=2 nvidia_drm.modeset=1 ipv6.disable=1"
#intremap=no_x2apic_optout
